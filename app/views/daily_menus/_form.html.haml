= form_for(@daily_menu) do |f|
  - if @daily_menu.errors.any?
    #error_explanation
      %h2
        = pluralize(@daily_menu.errors.count, "error")
        prohibited this daily_menu from being saved:
      %ul
        - @daily_menu.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field
    = f.label :message
    %br/
    = f.text_area :message
  .actions
    = f.submit
